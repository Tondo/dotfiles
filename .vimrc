set nocompatible

set nu
set autoindent
set expandtab
set sw=4
set ts=4
set softtabstop=4

set hlsearch!
nnoremap <F3> :set hlsearch!<CR>

set ignorecase
set smartcase

nnoremap j gj
nnoremap k gk
nnoremap gj j
nnoremap gk k

nnoremap ; :
nnoremap : ;

nnoremap t gt
nnoremap T gT

nnoremap <left> <nop>
nnoremap <right> <nop>
nnoremap <up> <nop>
nnoremap <down> <nop>
vnoremap <left> <nop>
vnoremap <right> <nop>
vnoremap <up> <nop>
vnoremap <down> <nop>

inoremap <C-J> <esc>

nnoremap <S-Q> @
